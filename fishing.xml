<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:padding="5dp"
     android:background="#A8E935" >

     <Button
         android:id="@+id/Disease"
         android:layout_width="200dp"
         android:layout_height="50dp"
         android:layout_alignLeft="@+id/Fish_Culture"
         android:layout_below="@+id/Fish_Culture"
         android:layout_marginTop="35dp"
         android:text="Disease" />

     <Button
         android:id="@+id/Nature_Of_Water"
         android:layout_width="200dp"
         android:layout_height="50dp"
         android:layout_alignLeft="@+id/Disease"
         android:layout_below="@+id/Disease"
         android:layout_marginTop="35dp"
         android:text="Nature Of Water" />

     <Button
         android:id="@+id/Fish_Culture"
         android:layout_width="200dp"
         android:layout_height="50dp"
         android:layout_marginTop="35dp"
         android:layout_alignLeft="@+id/Fish_Food"
         android:layout_centerVertical="true"
         android:text="Fish Culture" />

     <Button
         android:id="@+id/Fish_Food"
         android:layout_width="200dp"
         android:layout_height="50dp"
         android:layout_above="@+id/Fish_Culture"
         android:layout_alignLeft="@+id/types"
        android:layout_marginTop="35dp"
         android:text="Fish Food" />

     <Button
         android:id="@+id/types"
         android:layout_width="200dp"
         android:layout_height="50dp"
         android:layout_above="@+id/Fish_Food"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="35dp"
         android:text="Types" />

</RelativeLayout>
